{
  "dependencies": {
    "js-yaml": "^4.1.0",
    "pug": "^3.0.2"
  },
  "scripts": {
    "start": "node tools/serve-static.js",
    "stop": "pkill -f 'node tools/serve-static.js' || true",
    "stop:win": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :8080') do taskkill /PID %a /F",
    "build:poems": "node tools/build-poems.js",
    "build": "npm run build:poems && node tools/build-all-poems.js",
    "build:all": "npm run build && npm run start"
  }
}
